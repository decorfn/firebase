{
    "exclude": ["sample-project/**/*", "sample-angular/**/*", "node_modules"],
    "include": ["src/**/*"],
    "compilerOptions": {
        "sourceMap": true,
        "strict": true,
        "alwaysStrict": true,
        "strictNullChecks": true,
        "baseUrl": "./",
        "target": "es5",
        "module": "esnext",
        "lib": ["es2017"],
        "esModuleInterop": true,
        "moduleResolution": "node",
        "experimentalDecorators": true,
        "emitDecoratorMetadata": true,
        "declaration": true
    }
}
